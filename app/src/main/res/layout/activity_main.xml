<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pervayapomosh.firstmedicalaid.MainActivity"
    android:background="@color/background">
    <TextView
        android:id="@+id/textMainACt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textMainAct1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:layout_margin="15dp"
        />
    <RelativeLayout
        android:layout_below="@+id/textMainACt1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textMainACt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn"
        android:gravity="center"
        android:onClick="btnMainAct"
        android:padding="10dp"
        android:text="@string/textMainAct2"
        android:textColor="@color/black"
        android:textSize="20sp" />
</RelativeLayout>